<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo2"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/greetingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/logo2"
            android:textSize="18sp"
            android:text="Your task for the day!" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="2dp"
                    android:text="Going for work"
                    android:textColor="@color/logo2"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="2dp">

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/play_icon"
                        android:layout_alignParentEnd="false"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/play"
                        android:text="7:00AM"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:textColor="@color/logo2"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/pause"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pause_icon"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="2dp"
                    android:text="Reading a novel"
                    android:textColor="@color/logo2"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="2dp">

                    <ImageView
                        android:id="@+id/play3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/play_icon"
                        android:layout_alignParentEnd="false"/>

                    <TextView
                        android:id="@+id/time3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/play3"
                        android:text="7:00AM"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:textColor="@color/logo2"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/pause3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pause_icon"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="2dp"
                    android:text="Going for work"
                    android:textColor="@color/logo2"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="2dp">

                    <ImageView
                        android:id="@+id/play2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/play_icon"
                        android:layout_alignParentEnd="false"/>

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/play2"
                        android:text="7:00AM"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:textColor="@color/logo2"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/pause2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pause_icon"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
